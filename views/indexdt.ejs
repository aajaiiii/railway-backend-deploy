                    <input class="form-control" type="password" name="confirmpassword" id="confirmpassword" />
                </div>

                <!-- <input type="submit" value="submit" /> -->

                <div class="d-grid">
                    <button type="submit" class="btn btn-outline btnsubmit py-2">
                        รีเซ็ทรหัสผ่าน
                    </button>
                    <br />
                </div>

            </form>
        </div>


    </div>


